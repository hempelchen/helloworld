<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.chb.addon"
          android:versionCode="1"
          android:versionName="1.0">
	<uses-sdk android:minSdkVersion="9"/>

	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />

	<!-- 摄像头、手电筒 -->
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.FLASHLIGHT" />

	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />
	<uses-feature android:name="android.hardware.camera.flash" />

	<application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
		<activity android:name="com.chb.addon.MainActivity"
		          android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".InnerAppActivity"
		          android:label="我是一个子进程">

		          <!-- 如果需要启动独立的子进程，可以打开下面的注视
		          android:process=":child_process_any_name_is_ok"
		          -->

		</activity>
		<activity android:name=".light.LightActivity">
			<intent-filter>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".launchmode.ActA"
		          android:launchMode="standard"
				  android:label="ActA standard">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name="com.chb.addon.launchmode.ActB"
		          android:launchMode="singleTop"
		          android:label="ActB singleTop"
				  >
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity android:name=".launchmode.ActC"
		          android:launchMode="singleTask"
		          android:label="ActC singleTask">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity android:name=".launchmode.ActD"
		          android:launchMode="singleInstance"
		          android:label="ActD singleInstance">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".net.DNSActivity"
		          android:label="网络测试">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<receiver android:name=".widget.MyWidgetProvider">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
			           android:resource="@xml/info" />
		</receiver>

		<receiver android:name=".widget.MyWidgetBroadcast">
			<intent-filter>
				<action android:name="CHANGE_MAIN_BUTTON_CONTENT_HW"/>
			</intent-filter>
		</receiver>
	</application>
</manifest>
